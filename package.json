{
  "name": "raar-ui",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production --extra-webpack-config webpack.extra.js && npm run package",
    "package": "cd dist/raar-ui && gzip -kf *.js *.css && tar czf ../raar-ui.tar.gz .",
    "test": "ng test",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadlessNoSandbox",
    "lint": "ng lint",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run_with_server": "run-p --race start:ci cy:run",
    "cy:ci": "npm run prepare:ci && npm run cy:run_with_server",
    "prepare:ci": "ln -sf index.html dist/raar-ui/404.html",
    "start:ci": "http-server ./dist/raar-ui -a localhost -p 4200 -c-1",
    "format": "prettier --write \"./**/*.{js,ts,json,css,scss,html,md,yaml}\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^13.3.11",
    "@angular/common": "^13.3.11",
    "@angular/compiler": "^13.3.11",
    "@angular/core": "^13.3.11",
    "@angular/forms": "^13.3.11",
    "@angular/platform-browser": "^13.3.11",
    "@angular/platform-browser-dynamic": "^13.3.11",
    "@angular/router": "^13.3.11",
    "bootstrap-sass": "^3.4.1",
    "core-js": "^3.6.4",
    "moment": "^2.29.1",
    "ng2-date-picker": "^13.0.0",
    "ngx-build-plus": "^14.0.0",
    "ngx-infinite-scroll": "^10.0.1",
    "rxjs": "^6.5.4",
    "soundmanager2": "^2.97.20170602",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^13.3.9",
    "@angular/cli": "^13.3.9",
    "@angular/compiler-cli": "^13.3.11",
    "@angular/language-service": "^13.3.11",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "^2.0.8",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "cypress": "^8.6.0",
    "http-server": "^13.0.2",
    "jasmine-core": "~3.8.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "^6.3.4",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.2",
    "ts-node": "^8.8.1",
    "tslint": "~6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.6.4"
  }
}
