{
  "name": "raar-ui",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --prod --extra-webpack-config webpack.extra.js && npm run package",
    "package": "cd dist/raar-ui && gzip -kf *.js *.css && tar czf ../raar-ui.tar.gz .",
    "test": "ng test",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadlessNoSandbox",
    "lint": "ng lint",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run_with_server": "run-p --race start:ci cy:run",
    "cy:ci": "npm run prepare:ci && npm run cy:run_with_server",
    "prepare:ci": "ln -sf index.html dist/raar-ui/404.html",
    "start:ci": "http-server ./dist/raar-ui -a localhost -p 4200 -c-1",
    "format": "prettier --write \"./**/*.{js,ts,json,css,scss,html,md,yaml}\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^9.1.0",
    "@angular/common": "^9.1.0",
    "@angular/compiler": "^9.1.0",
    "@angular/core": "^9.1.0",
    "@angular/forms": "^9.1.0",
    "@angular/platform-browser": "^9.1.0",
    "@angular/platform-browser-dynamic": "^9.1.0",
    "@angular/router": "^9.1.0",
    "bootstrap-sass": "^3.4.1",
    "core-js": "^3.6.4",
    "moment": "^2.24.0",
    "ng2-date-picker": "^8.0.0",
    "ngx-build-plus": "^9.0.6",
    "ngx-infinite-scroll": "^8.0.1",
    "rxjs": "^6.5.4",
    "soundmanager2": "^2.97.20170602",
    "tslib": "^1.10.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.901.0",
    "@angular/cli": "^9.1.0",
    "@angular/compiler-cli": "^9.1.0",
    "@angular/language-service": "^9.1.0",
    "@types/jasmine": "^3.5.10",
    "@types/jasminewd2": "^2.0.8",
    "@types/node": "^12.11.1",
    "codelyzer": "^5.1.2",
    "cypress": "^4.2.0",
    "http-server": "^0.12.1",
    "jasmine-core": "^3.5.0",
    "jasmine-spec-reporter": "^5.0.1",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage-istanbul-reporter": "^2.1.1",
    "karma-jasmine": "^3.1.1",
    "karma-jasmine-html-reporter": "^1.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.2",
    "ts-node": "^8.8.1",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  }
}
