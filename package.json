{
  "name": "raar-ui",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --prod --extra-webpack-config webpack.extra.js && npm run package",
    "package": "cd dist/raar-ui && gzip -kf *.js *.css && tar czf ../raar-ui.tar.gz .",
    "test": "ng test",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadlessNoSandbox",
    "lint": "ng lint",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run_with_server": "run-p --race start:ci cy:run",
    "cy:ci": "npm run prepare:ci && npm run cy:run_with_server",
    "prepare:ci": "ln -sf index.html dist/raar-ui/404.html",
    "start:ci": "http-server ./dist/raar-ui -a localhost -p 4200 -c-1",
    "format": "prettier --write \"./**/*.{js,ts,json,css,scss,html,md,yaml}\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^8.0.2",
    "@angular/common": "^8.0.2",
    "@angular/compiler": "^8.0.2",
    "@angular/core": "^8.0.2",
    "@angular/forms": "^8.0.2",
    "@angular/platform-browser": "^8.0.2",
    "@angular/platform-browser-dynamic": "^8.0.2",
    "@angular/router": "^8.0.2",
    "bootstrap-sass": "^3.4.1",
    "core-js": "^2.5.4",
    "moment": "^2.24.0",
    "ng2-date-picker": "^2.11.0",
    "ngx-build-plus": "^8.0.3",
    "ngx-infinite-scroll": "^7.1.0",
    "rxjs": "~6.5.2",
    "soundmanager2": "^2.97.20170602",
    "tslib": "^1.9.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.800.3",
    "@angular/cli": "^8.0.3",
    "@angular/compiler-cli": "^8.0.2",
    "@angular/language-service": "^8.0.2",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.5.0",
    "cypress": "^3.3.0",
    "http-server": "^0.11.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "1.17.0",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "~3.4.5"
  }
}
